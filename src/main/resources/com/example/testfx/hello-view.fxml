<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.testfx.ButtonsController">
    <Label fx:id="display"/>

    <GridPane alignment="CENTER">
        <Button fx:id="one" text="1" GridPane.columnIndex="0" GridPane.rowIndex="0" minHeight="75" minWidth="75"/>
        <Button fx:id="two" text="2" GridPane.columnIndex="1" GridPane.rowIndex="0" minHeight="75" minWidth="75"/>
        <Button fx:id="three" text="3" GridPane.columnIndex="2" GridPane.rowIndex="0" minHeight="75" minWidth="75"/>
        <Button fx:id="add" text="+" GridPane.columnIndex="3" GridPane.rowIndex="0" minHeight="75" minWidth="75"/>
        <Button fx:id="four" text="4" GridPane.columnIndex="0" GridPane.rowIndex="1" minHeight="75" minWidth="75"/>
        <Button fx:id="five" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" minHeight="75" minWidth="75"/>
        <Button fx:id="six" text="6" GridPane.columnIndex="2" GridPane.rowIndex="1" minHeight="75" minWidth="75"/>
        <Button fx:id="subtract" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1" minHeight="75" minWidth="75"/>
        <Button fx:id="seven" text="7" GridPane.columnIndex="0" GridPane.rowIndex="2" minHeight="75" minWidth="75"/>
        <Button fx:id="eight" text="8" GridPane.columnIndex="1" GridPane.rowIndex="2" minHeight="75" minWidth="75"/>
        <Button fx:id="nine" text="9" GridPane.columnIndex="2" GridPane.rowIndex="2" minHeight="75" minWidth="75"/>
        <Button fx:id="multiply" text="*" GridPane.columnIndex="3" GridPane.rowIndex="2" minHeight="75" minWidth="75"/>
        <Button fx:id="clear" text="C" GridPane.columnIndex="0" GridPane.rowIndex="3" minHeight="75" minWidth="75"/>
        <Button fx:id="zero" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3" minHeight="75" minWidth="75"/>
        <Button fx:id="equals" text="=" GridPane.columnIndex="2" GridPane.rowIndex="3" minHeight="75" minWidth="75"/>
        <Button fx:id="divide" text="/" GridPane.columnIndex="3" GridPane.rowIndex="3" minHeight="75" minWidth="75"/>
    </GridPane>
</VBox>
